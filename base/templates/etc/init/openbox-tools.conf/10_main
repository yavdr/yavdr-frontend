start on openbox-started

task

env DISPLAY=:1
export DISPLAY

script
  LANG=C /sbin/status vdr | grep -q process && /sbin/initctl emit vdr-frontend-restart || /bin/true

  xset -dpms s off -display :1
  if [ -e /etc/default/locale ] ; then
    . /etc/default/locale
  fi

  if [ ! "$LANG" = "" ]; then
    setxkbmap ${LANG/_*} ||:
  else
    setxkbmap ||:
  fi

end script
